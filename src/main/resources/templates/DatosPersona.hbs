</head>

<body>

<nav class="navbar navbar-default navbar-fixed-top navbar-shrink">
    <div class="container">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header page-scroll">
            <a class="navbar-brand page-scroll" href="/menu_inicio">Sistema de Registro de Personas</a>
        </div>
    </div>
</nav>



<!-- partial:index.partial.html -->
<div class="form">

    <button type="submit" class="button button-back" onclick="window.location.href='/menu_inicio'">VOLVER ATRAS</button>

        <div id="signUp">

            <form class="" style="" method="post" action="/menu_datos_persona">

                <h2>Datos personales</h2>

                <div class="top-row">
                    <div class="field-wrap">
                        <label>
                            Nombre<span class="req">*</span>
                        </label>
                        <br>
                        <br>
                        <input type="text" required autocomplete="off" id="Nombre" name="Nombre" value={{nombre}}>
                    </div>

                    <div class="field-wrap">
                        <label>
                            Apellido<span class="req">*</span>
                        </label>
                        <br>
                        <br>
                        <input type="text" required autocomplete="off" id="Apellido" name="Apellido" value={{apellido}}>
                    </div>
                </div>

                <div class="top-row">

                <div class="top-row">
                    <div class="field-wrap">
                        <label>
                            Ciudad<span class="req">*</span>
                        </label>
                        <br>
                        <br>
                        <input type="text" required autocomplete="off" id="Ciudad" name="Ciudad" class="input-datos" />
                    </div>

                    <div class="field-wrap">
                        <label>
                            Localidad <span class="req">*</span>
                        </label>
                        <br>
                        <br>
                        <input type="text" required autocomplete="off" id="Localidad" name="Localidad"
                               class="input-datos" />
                    </div>
                </div>

                <div class="field-wrap">
                    <label>
                        DNI<span class="req">*</span>
                    </label>
                    <br>
                    <br>
                    <input type="text" required autocomplete="off" name="DNI" class="input-datos" value={{dni}} />
                </div>

                <button type="submit" id="myBtn" class="button button-back">Guardar Cambios</button>

                <!--Enable textbox according to previus select in combobox and enable button once textboxs filled-->

                <script type="text/javascript">

            function verify() {
              if (document.getElementById("nombre").value === "") {
                document.getElementById('startbutton').disabled = true;
                alert("Llene todos los campos obligatorios");
              }
              else {
                document.getElementById('startbutton').disabled = false;
              }
            }
          </script>
                </div>
            </form>
    </div>

</div>
<div id="myModal" class="modal-reg">

    <!-- Modal content -->
    <div class="modal-content">
        <span class="close">&times;</span>
        <p>Se ha registrado con éxito</p>
        <button type="mybtn" class="button button-modal">
            <!--onclick="window.location.href='/menu_logueado'">-->OK</button>
    </div>
</div>

<script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
<script src="/js/DatosPersona.js"></script>

{{#if se_realizo_pedido_operacion}}
    {{#if resultado_operacion}}
        <script type="text/javascript">
        window.alert("Operacion realizada correctamente");
    </script>
    {{else}}
        <script type="text/javascript">
        window.alert("Operacion no se pudo realizar");
    </script>
    {{/if}}


{{/if}}

</body>

</html>